<!--pages/history/history.wxml-->
<view class="container">
    <scroll-view scroll-y="true" style="width:100%;">
       <block wx:for="{{hisData}}" wx:key="item">

            <view class="history-item">
                <view class="history-item-img">
                    <image src="{{item.image}}" />
                </view>
                <view class="history-item-desc">
                        {{item.courses_name}}
                </view>
            </view>    
        
       </block>
    </scroll-view>
</view>