/**index.wxss**/
.userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 auto;
  background-color: #fff;
  padding-bottom: 50rpx;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 50rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin-top: 20rpx;
}

.usermotto {
  margin-top: 200px;
}

.watch-history{
    width: 100%;
    height: 50px;
    background-color: #fff;
    margin-top: 10px;
    line-height: 50px;
    display: flex;
}
.mine-item-icon{
  flex: 1;
  text-align: center;
}
.mine-item-icon image{
  width: 30px;
  height: 30px;
  vertical-align: middle;
}
.mine-item-name{
  flex: 5;
}
.mine-item-arrow{
  text-align: center;
  flex: 1;
}
.mine-item-arrow image{
  width: 30px;
  height: 30px;
  vertical-align: middle;
}