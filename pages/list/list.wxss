/* pages/list/list.wxss */

.list-head{
    width: 100%;
    height: 160px;
    background-color: #000;
    color: #fff;
    text-align: center;
}
.list-head image{
    /*flex: 1;*/
    width: 60px;
    height: 60px;
    border-radius: 50px;
    margin: 20px auto;
}
.list-head text{
    display: block;
    width: 100%;
    height: 50px;
    margin-top: 5px;
}
.list-content{
    width: 100%;
    height: 100%;
   
}


.list-item{
    display: flex;
    width: 100%;
    height: 70px;
    background-color: #fff;
    border-bottom: solid 1px #eee;
    line-height: 80px;
    text-align: center;
    margin-top: 10px;
    padding: 5px;
}
.list-item image{
    width:70px;
    height: 70px;
}
.list-item text{
    margin-left: 20px;
}
